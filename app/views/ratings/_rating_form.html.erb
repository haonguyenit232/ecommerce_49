<div id="product-rating">
  <% if user_signed_in? %>
    <% if current_user.rating? @product %>
      <%= render "ratings/old" %>
    <% else %>
      <%= render "ratings/new" %>
    <% end %>
  <% else %>
  <p>
    <%= link_to t(".require_login"), new_user_session_path, class: "btn btn-warning" %>
  </p>
  <% end %>
</div>
