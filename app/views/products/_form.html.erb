<%= form_for @product do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :title, t(".label_title") %>
  <%= f.text_field :title %>

  <%= f.label :price, t(".label_price") %>
  <%= f.number_field :price, step: :any %>

  <%= f.label :description, t(".label_description") %>
  <%= f.text_area :description %>

  <%= f.label :quantity, t(".label_quantity") %>
  <%= f.number_field :quantity %>

  <%= f.label :image, t(".label_image") %>
  <%= f.file_field :image %>

  <%= f.label :category_id, t(".label_category_id") %>
  <%= f.number_field :category_id %>

  <%= f.submit %>
<% end %>
