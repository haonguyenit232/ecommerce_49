<div class="col-md-4">
  <div class="item">
    <div class="product">
      <div class="text">
        <h3><%= link_to product.title, product %></h3>
        <p class="price"><%= product.price %></p>
        <p class="buttons">
          <%= link_to (t "view_detail" ), product, {:class => "btn btn-default"} %>
          <% if product.quantity > 0 %>
          <%= link_to t("add_to_cart"), items_path(product_id: product.id),
            method: :post, remote: true, class: "btn btn-primary" %>
          <% else %>
            <button class="btn btn-warning"><%= t "sold_out" %></button>
          <% end %>
          </p>
      </div>
    </div>
  </div>
</div>
