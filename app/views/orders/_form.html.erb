<%= form_for @order do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.hidden_field :total, value: sum_total_price_of_cart %>

  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, value: current_user.name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, t(".phone") %>
    <%= f.text_field :phone, value: current_user.phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address, t(".address") %>
    <%= f.text_field :address, value: current_user.address, class: "form-control" %>
  </div>

  <%= f.submit t("button"),
    class: "btn btn-primary btn btn-danger col-md-4 col-md-offset-4" %>
<% end %>
