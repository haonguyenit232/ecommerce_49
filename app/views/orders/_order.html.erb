<tr>
  <td><%= create_index_row params[:page], order_counter, Settings.product_per_page %></td>
  <td><%= order.name %></td>
  <td><%= order.address %></td>
  <td><%= order.phone %></td>
  <td><%= l order.created_at, format: t("date.format.date_time") %></td>
  <td><%= number_to_currency order.total %></td>
  <td>
    <%= link_to order_order_details_path(current_user, order), class: "btn btn-primary" do %>
      <i class="fa fa-eye"></i>&nbsp; Oderdetails
    <% end %>
  </td>
</tr>
